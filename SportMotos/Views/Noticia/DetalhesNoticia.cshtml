@model SportMotos.Models.Noticium
@{
    ViewData["Title"] = Model.Titulo;
}
@using Markdig

<h1>@Model.Titulo</h1>
<h4>@Model.SubTitulo</h4>
<p><small>Publicado em: @Model.DataPublicacao.ToString("dd/MM/yyyy")</small></p>
<div>
    @Html.Raw(Model.Descricao != null ? Markdown.ToHtml(Model.Descricao) : "Descrição não disponível")
</div>