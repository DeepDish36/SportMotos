@model SportMotos.Models.Cliente

@{
    ViewData["Title"] = "Perfil";
}

<h2>O meu Perfil</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="AtualizarPerfil" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Nome</label>
                <input asp-for="Nome" class="form-control" required />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Sobrenome</label>
                <input asp-for="Sobrenome" class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Telefone</label>
                <input asp-for="Telefone" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Idade</label>
                <input asp-for="Idade" type="number" class="form-control form-control-sm" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Rua</label>
                <input asp-for="Rua" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Morada</label>
                <input asp-for="Morada" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Código Postal</label>
                <input asp-for="CodPostal" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Género</label>
                <select asp-for="Genero" class="form-control">
                    <option value="Masculino">Masculino</option>
                    <option value="Feminino">Feminino</option>
                    <option value="Outro">Outro</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group mt-2">
        <label>
            <input type="checkbox" asp-for="ReceberNewsletter" />
            Desejo receber a Newsletter
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
