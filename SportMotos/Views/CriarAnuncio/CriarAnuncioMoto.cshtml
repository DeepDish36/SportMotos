@model SportMotos.Models.AnuncioMoto

@{
    ViewData["Title"] = "Criar Anúncio de Moto";
}

<h2 class="mb-4">Criar Anúncio de Moto</h2>

<form asp-action="CreateMoto" method="post">
    <div class="form-group">
        <label for="IdMoto">Moto</label>
        <select asp-for="IdMoto" class="form-control" asp-items="ViewBag.MotosDisponiveis"></select>
    </div>

    <div class="form-group">
        <label for="Titulo">Título</label>
        <input asp-for="Titulo" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <textarea asp-for="Descricao" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label for="Preco">Preço</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="Condicao">Condição</label>
        <select asp-for="Condicao" class="form-control">
            <option value="Nova">Nova</option>
            <option value="Usada">Usada</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Criar Anúncio</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>