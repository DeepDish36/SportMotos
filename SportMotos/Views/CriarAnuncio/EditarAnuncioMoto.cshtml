@model SportMotos.Models.AnuncioMoto

@{
    ViewData["Title"] = "Editar Anúncio de Moto";
}

<h2 class="mb-4">Editar Anúncio de Moto</h2>

<form asp-action="EditarAnuncioMoto" asp-controller="CriarAnuncio" method="post">
    <input type="hidden" asp-for="IdAnuncioMoto" /> <!-- ✅ Campo oculto para o ID do anúncio -->

    <div class="form-group">
        <label>Título</label>
        <input asp-for="Titulo" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Descrição</label>
        <textarea asp-for="Descricao" class="form-control" required></textarea>
    </div>

    <label>Condição</label>
    <select class="form-control" id="Condicao" disabled>
        <option value="Nova">Nova</option>
        <option value="Usada">Usada</option>
    </select>
    <input type="hidden" asp-for="Condicao" id="CondicaoHidden" />

    <button type="submit" class="btn btn-primary mt-3">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    <script src="~/js/editaranunciomotojs.js"></script>
}
