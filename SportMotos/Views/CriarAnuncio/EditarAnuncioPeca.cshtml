@model SportMotos.Models.AnuncioPeca

@{
    ViewData["Title"] = "Editar Anúncio de Peça";
}

<h2 class="mb-4">Editar Anúncio de Peça</h2>

<form asp-action="EditarAnuncioPeca" asp-controller="CriarAnuncio" method="post">
    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success">
            @TempData["Sucesso"]
        </div>
    }

    <div class="form-group">
        <input type="hidden" asp-for="IdAnuncioPeca" class="form-control"/>
    </div>

    @* <div class="form-group">
        <label>Marca</label>
        <input class="form-control" value="@Model.IdPecaNavigation?.Marca" disabled />
    </div>

    <div class="form-group">
        <label>Modelo</label>
        <input class="form-control" value="@Model.IdPecaNavigation?.Modelo" disabled />
    </div>

    <div class="form-group">
        <label>Categoria</label>
        <input class="form-control" value="@Model.IdPecaNavigation?.Categoria" disabled />
    </div> *@

    <div class="form-group">
        <label>Título</label>
        <input asp-for="Titulo" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Descrição</label>
        <textarea asp-for="Descricao" class="form-control" required>@Model.Descricao</textarea>
    </div>

    <div class="form-group">
        <label>Condição</label>
        <select asp-for="Condicao" class="form-control" disabled>
            <option value="Nova" selected="@(Model.Condicao == "Nova")">Nova</option>
            <option value="Usada" selected="@(Model.Condicao == "Usada")">Usada</option>
        </select>
    </div>
    <input type="hidden" asp-for="Condicao" id="CondicaoHidden" />

    <button type="submit" class="btn btn-primary mt-3">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
