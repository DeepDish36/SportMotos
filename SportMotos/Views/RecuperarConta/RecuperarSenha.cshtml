@{
    ViewData["Title"] = "Recuperar Senha";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-sm" style="max-width: 400px; width: 100%;">
        <h3 class="text-center">Recuperar Senha</h3>

        @if (ViewBag.Mensagem != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Mensagem</div>
        }
        else
        {
            <form method="post" asp-action="EnviarLinkRecuperacao">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Enviar Link</button>
            </form>
        }
    </div>
</div>

