@{
}

<style>
    body {
        background-image: url('/Imagens/bglogin.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
</style>

<div class="container text-center">
    <div class="row align-items-center">
        <div class="col">
        </div>
        <div class="col" style="background-color: rgba(255, 255, 0, 0.5);">
            <h2 style="margin-bottom:9%">Iniciar Sessão</h2>
            <form class="needs-validation" novalidate>
                <div class="form-check">
                    <input class="form-control" style="margin-bottom: 3%; width:100%" id="Email" type="email" placeholder="Email*" required />
                    <div class="invalid-feedback">
                        Email inválido ou não existe.
                    </div>
                </div>
                <input class="form-control" style="width:100%" id="Password" type="password" placeholder="Palavra-Passe*" required />
                <div class="invalid-feedback">
                    Palavra-passe errada ou não existe.
                </div>
                <br />
                <div>
                    <a href="#">Recuperar Palavra-Passe</a>
                </div>
                <input style="width: 100%; height:4%" id="BotaoLogin" class="rounded-pill border-0" type="submit" value="Entrar" />
                <div style="margin-top: 10px;">OU</div>
                <div>
                    <a asp-area="CriarConta" asp-controller="CriarConta" asp-action="Register">Criar Conta</a>
                </div>
                <div class="terms">
                    Ao entrares na tua conta, estás a aceitar os nossos <a href="#">Termos e Condições</a>.
                </div>
            </form>
        </div>
        <div class="col">
        </div>
    </div>
</div>