@{
    ViewData["Title"] = "SportMotos - Iniciar Sessão";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div class="login-page">
    <div class="login-container">
        @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
        {
            <div class="alert alert-danger">@ViewBag.Mensagem</div>
        }
        <h2 style="margin-bottom: 9%;">Iniciar Sessão</h2>
        <form asp-controller="Login" asp-action="Login" method="post" class="needs-validation" novalidate>
            <div class="mt-3">
                <input class="form-control" name="Email" id="Email" type="text" placeholder="Email*" required />
                <div class="invalid-feedback">
                    Email errado ou não existe.
                </div>
            </div>

            <div class="mt-3">
                <input class="form-control" name="password" id="Password" type="password" placeholder="Palavra-Passe*" required />
                <div class="invalid-feedback">
                    Palavra-passe errada ou não existe.
                </div>
            </div>

            <div class="forgot-password">
                <span>Esqueceste-te da palavra-passe?</span>
                <a asp-controller="RecuperarConta" asp-action="RecuperarSenha">Recuperar</a>
            </div>

            <button type="submit" class="btn-login">Entrar</button>

            <div class="mt-3">OU</div>

            <div class="mt-2">
                <a style="color:black" asp-controller="CriarConta" asp-action="Register"><b>Criar Conta</b></a>
            </div>

            <div class="terms">
                Ao entrares na tua conta, estás a aceitar os nossos <a style="color:black" asp-controller="Home" asp-action="Privacy"><b>Termos e Condições</b></a>
            </div>
        </form>
    </div>
</div>
