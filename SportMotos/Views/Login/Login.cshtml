<style>
    .login-page {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-image: url('/Imagens/bglogin.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.5); /* Igual à página de criar conta */
        padding: 40px;
        border-radius: 12px;
        width: 400px;
        text-align: center;
        backdrop-filter: blur(8px);
    }

    .forgot-password {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-size: 0.9em;
    }

        .forgot-password a {
            text-decoration: none;
            font-weight: bold;
            color: black;
        }

    .btn-login {
        width: 100%;
        height: 40px;
        background-color: #323232;
        color: white;
        border: none;
        border-radius: 20px;
        font-size: 1em;
        margin-top: 10px;
        cursor: pointer;
    }

        .btn-login:hover {
            background-color: #232323;
        }

    .terms {
        font-size: 0.85em;
        margin-top: 10px;
    }

        .terms a {
            color: black;
            text-decoration: none;
            font-weight: bold;
        }
</style>

<div class="login-page">
    <div class="login-container">
        <h2 style="margin-bottom: 9%;">Iniciar Sessão</h2>
        <form class="needs-validation" novalidate>
            <div class="form-check">
                <input class="form-control" id="Email" type="email" placeholder="Email*" required />
                <div class="invalid-feedback">
                    Email inválido ou não existe.
                </div>
            </div>

            <div class="mt-3">
                <input class="form-control" id="Password" type="password" placeholder="Palavra-Passe*" required />
                <div class="invalid-feedback">
                    Palavra-passe errada ou não existe.
                </div>
            </div>

            <div class="forgot-password">
                <span>Esqueceste-te da palavra-passe?</span>
                <a asp-action="">Recuperar</a>
            </div>

            <button type="submit" class="btn-login">Entrar</button>

            <div class="mt-3">OU</div>

            <div class="mt-2">
                <a style="color:black" asp-controller="CriarConta" asp-action="Register"><b>Criar Conta</b></a>
            </div>

            <div class="terms">
                Ao entrares na tua conta, estás a aceitar os nossos <a href="#">Termos e Condições</a>.
            </div>
        </form>
    </div>
</div>
