@{
}

<style>
    body {
        background-image: url('/Imagens/bglogin.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
</style>

<div class="container text-center">
    <div class="row align-items-center">
        <div class="col">
        </div>
        <div class="col" style="background-color: rgba(255, 255, 255, 0.5);">
            <h2 style="margin-bottom:9%">Iniciar Sessão</h2>
            <form asp-action="Register" method="post">
                <div id="nome" style="display:flex; gap:9px;">
                    <input id="Nome" name="Nome" class="rounded border-0" type="text" style="height:40px; padding-left:12px" placeholder="Nome*" />
                    <input id="Sobrenome" name="Sobrenome" class="rounded border-0" style="height:40px; padding-left:12px" type="text" placeholder="Sobrenome" />
                </div>

                <div id="email" class="rounded" style="display:flex; margin-top:15px;">
                    <input class="rounded border-0" style="margin-bottom: 3%; width:100%; height:40px; padding-left:12px" id="Email" name="Email" type="text" placeholder="Email*" />
                </div>

                <div id="passwords" style="display:flex; gap:9px">
                    <input style="width:100%; height:40px; padding-left:12px" class="rounded border-0" id="Password" name="Password" type="password" placeholder="Palavra-Passe*" />
                    <input style="width:100%; height:40px; padding-left:12px" class="rounded border-0" id="ConfirmarPassword" name="ConfirmarPassword" type="password" placeholder="Confirmar Palavra-Passe*" />
                </div>

                <br />

                <div style="display:flex; gap:3px">
                    <p>Já tens conta?</p><a asp-area="Login" asp-controller="Login" asp-action="Login" style="color:black"><b>Iniciar Sessão</b></a>
                </div>

                <button type="submit" style="width: 100%; height:40px; background-color:#323232; color:white; margin-bottom:8px" id="BotaoLogin" class="rounded-pill border-0">Criar Conta</button>

                <div class="form-check">
                    <input style="background-color:#323232;" class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                    <label style="font-size: 0.65em" class="form-check-label" for="flexCheckChecked">
                        Autorizo o envio de comunicações comerciais e promocionais sobre produtos e serviços oferecidos pela SportMotos por e-mail ou telemóvel.
                    </label>
                </div>

                <div class="terms">
                    Ao criares a tua conta, estás a aceitar os nossos <a asp-area="" asp-controller="Home" asp-action="Privacy">Termos e Condições</a>.
                </div>
            </form>
            @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewBag.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
        </div>
        <div class="col">
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
