@{
    ViewData["Title"] = "SportMotos";
}

<link rel="stylesheet" href="~/css/Index.css" />

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensagemErro"]
    </div>
}

<div class="search-container">
    <h2 class="search-title">Encontre tudo o que quiser em segundos!</h2>

    <div class="d-flex justify-content-between">
        <button id="btnMotos" class="btn btn-outline-dark btn-toggle">Motos</button>
        <button id="btnPecas" class="btn btn-outline-dark btn-toggle">Peças</button>
    </div>

    <div class="filter-container">
        <div id="filtersMotos" style="display: none">
            <div class="row">
                <div class="col-md-6">
                    <label>Estilo</label>
                    <select id="estiloSelect" class="form-select">
                        <option disabled hidden selected>Estilo</option>
                        <!-- Estilos serão carregados aqui -->
                    </select>
                </div>
                <div class="col-md-6">
                    <label>Marca</label>
                    <select id="marcaSelect" class="form-select">
                        <option disabled hidden selected>Marca</option>
                        <!-- Marcas serão carregadas aqui -->
                    </select>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label>Modelo</label>
                    <select id="modeloSelect" class="form-select" disabled>
                        <option disabled hidden selected>Modelo</option>
                        <!-- Modelos serão carregados aqui -->
                    </select>
                </div>
                <div class="col-md-6">
                    <label>Preço</label>
                    <div class="d-flex">
                        <select id="precoDeSelect" class="form-select me-2">
                            <option disabled hidden selected>de</option>
                            <option>0€</option>
                            <option>1000€</option>
                            <option>5000€</option>
                            <option>10000€</option>
                            <option>20000€</option>
                            <option>50000€</option>
                        </select>
                        <select id="precoAteSelect" class="form-select">
                            <option disabled hidden selected>até</option>
                            <option>0€</option>
                            <option>1000€</option>
                            <option>5000€</option>
                            <option>10000€</option>
                            <option>20000€</option>
                            <option>50000€</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <label>Ano</label>
                    <div class="d-flex">
                        <select id="anoDeSelect" class="form-select me-2">
                            <option disabled hidden selected>de</option>
                            <!-- Anos serão carregados aqui -->
                        </select>
                        <select id="anoAteSelect" class="form-select">
                            <option disabled hidden selected>até</option>
                            <!-- Anos serão carregados aqui -->
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <label>Combustível</label>
                    <select id="combustivelSelect" class="form-select">
                        <option disabled hidden selected>Combustível</option>
                        <option>Elétrico</option>
                        <option>Gasolina</option>
                    </select>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label>Quilómetros</label>
                    <div class="d-flex">
                        <select id="kmDeSelect" class="form-select me-2">
                            <option disabled hidden selected>de</option>
                            <option>0</option>
                            <option>5000</option>
                            <option>10000</option>
                            <option>15000</option>
                            <option>20000</option>
                            <option>25000</option>
                            <option>30000</option>
                            <option>35000</option>
                            <option>40000</option>
                            <option>45000</option>
                            <option>50000</option>
                        </select>
                        <select id="kmAteSelect" class="form-select">
                            <option disabled hidden selected>até</option>
                            <option>0</option>
                            <option>5000</option>
                            <option>10000</option>
                            <option>15000</option>
                            <option>20000</option>
                            <option>25000</option>
                            <option>30000</option>
                            <option>35000</option>
                            <option>40000</option>
                            <option>45000</option>
                            <option>50000</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div id="filtersPecas" style="display: none;">
            <div class="row">
                <div class="col-md-6">
                    <label>Marca</label>
                    <select id="pecaMarcaSelect" class="form-select">
                        <option disabled hidden selected>Marca</option>
                        <!-- Marcas serão carregadas aqui -->
                    </select>
                </div>
                <div class="col-md-6">
                    <label>Modelo</label>
                    <select id="pecaModeloSelect" class="form-select" disabled>
                        <option disabled hidden selected>Modelo</option>
                        <!-- Modelos serão carregados aqui -->
                    </select>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label>Preço</label>
                    <div class="d-flex">
                        <select class="form-select me-2">
                            <option disabled hidden selected>de</option>
                        </select>
                        <select class="form-select">
                            <option disabled hidden selected>até</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <button id="btnVerResultados" class="btn-search">Ver resultados</button>
                <span id="resultadosCount"></span>
            </div>
        </div>
    </div>
</div>

<div id="anunciosContainer" class="mt-4">
    <!-- Anúncios serão carregados aqui -->
</div>

<script src="~/js/index.js"></script>
