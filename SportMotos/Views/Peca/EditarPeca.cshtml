@model SportMotos.Models.Peca

@{
    ViewData["Title"] = "Editar Peça";
}

<h2>Editar Peça</h2>

<form asp-controller="Peca" asp-action="EditarPeca" method="post" enctype="multipart/form-data">
    <input type="hidden" name="IdPeca" value="@Model.IdPeca" />
    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" name="Nome" value="@Model.Nome" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Descrição</label>
            <input type="text" class="form-control" name="Descricao" value="@Model.Descricao" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Categoria</label>
            <input type="text" class="form-control" name="Categoria" value="@Model.Categoria" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Marca</label>
            <input type="text" class="form-control" name="Marca" value="@Model.Marca" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Modelo (Opcional)</label>
            <input type="text" class="form-control" name="Modelo" value="@Model.Modelo">
        </div>
        <div class="col-md-6">
            <label class="form-label">Compatibilidade (Opcional)</label>
            <input type="text" class="form-control" name="Compatibilidade" value="@Model.Compatibilidade">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Preço (€)</label>
            <input type="number" step="0.01" class="form-control" name="Preco" value="@Model.Preco" min="0" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Data de Fabricação</label>
            <input type="number" class="form-control" name="DataFabricacao" value="@Model.DataFabricacao" min="1900" max="@DateTime.Now.Year" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Stock</label>
            <input type="number" class="form-control" name="Stock" value="@Model.Stock" min="0" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Estado</label>
            <select class="form-control" name="Estado" required>
                <option value="Novo" @(Model.Estado == "Novo" ? "selected" : "")>Novo</option>
                <option value="Usado" @(Model.Estado == "Usado" ? "selected" : "")>Usado</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Peso (kg) (Opcional)</label>
            <input type="number" step="0.01" class="form-control" name="Peso" value="@Model.Peso">
        </div>
        <div class="col-md-6">
            <label class="form-label">Garantia (meses) (Opcional)</label>
            <input type="number" class="form-control" name="Garantia" value="@Model.Garantia" min="0">
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagem da Peça</label>
        <input type="file" class="form-control" name="NomeArquivo" accept="image/*">
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
