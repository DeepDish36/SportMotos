@{
    @if(ViewBag.Sucesso!=null)
    {
        <div class="alert alert-success">@ViewBag.Sucesso</div>
    }
    ViewData["Title"] = "Adicionar Peça";
}

<h2>Adicionar Peça</h2>

<form asp-controller="Peca" asp-action="AdicionarPeca" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" name="Nome" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Descrição</label>
            <input type="text" class="form-control" name="Descricao" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Categoria</label>
            <input type="text" class="form-control" name="Categoria" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Marca</label>
            <input type="text" class="form-control" name="Marca" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Modelo (Opcional)</label>
            <input type="text" class="form-control" name="Modelo">
        </div>
        <div class="col-md-6">
            <label class="form-label">Compatibilidade (Opcional)</label>
            <input type="text" class="form-control" name="Compatibilidade">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Preço (€)</label>
            <input type="number" step="0.01" class="form-control" name="Preco" min="0" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Data de Fabricação</label>
            <input type="number" class="form-control" name="DataFabricacao" min="1900" max="@DateTime.Now.Year" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Stock</label>
            <input type="number" class="form-control" name="Stock" min="0" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Estado</label>
            <select class="form-control" name="Estado" required>
                <option value="Nova">Nova</option>
                <option value="Usada">Usada</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Peso (kg) (Opcional)</label>
            <input type="number" step="0.01" class="form-control" name="Peso">
        </div>
        <div class="col-md-6">
            <label class="form-label">Garantia (meses) (Opcional)</label>
            <input type="number" class="form-control" name="Garantia" min="0">
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagem da Peça</label>
        <input type="file" class="form-control" name="NomeArquivo" accept="image/*">
    </div>

    <button type="submit" class="btn btn-primary">Adicionar Peça</button>
    <a asp-action="Dashboard" asp-controller="DashBoard" class="btn btn-secondary">Voltar</a>
</form>
